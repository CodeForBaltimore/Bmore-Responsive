      "HealthcheckItem" : {
        "type" : "object",
        "required" : [ "uptime", "environment", "version", "requestId" ],
        "properties" : {
          "uptime" : {
            "type" : "string",
            "example" : "42:42:42"
          },
          "environment" : {
            "type" : "string",
            "example" : "dev"
          },
          "version" : {
            "type" : "string",
            "example" : "0.0.1"
          },
          "requestId" : {
            "type" : "string",
            "format" : "uuid",
            "example" : "602e1bd9-3eb1-4a26-a0d1-6bf08e8c0a66"
          }
        }
      },
      "UserItem" : {
        "type" : "object",
